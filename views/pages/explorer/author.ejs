<%- include('../../partials/head.ejs') %> 
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card card-body">
                    <div>
                        <img src="<%= author.profilePic %> " alt="User Profile Picture" class="img-thumbnail img-fluid">
                    </div>
                    <div class="mt-3">
                        <p>Name: <strong><%= author.profile.name %> </strong></p>
                        <p>Title: <strong><%= author.profile.title %> </strong></p>
                        <p>Bio: <strong><%= author.profile.bio %> </strong></p>

                        <div class="mt-2">
                            Social Links:
                            <% if(author.profile.links.website) { %> 
                                <span>
                                    <a href="<%= author.profile.links.website %> " target="_blank">
                                        <i class="fab fa-internet-explorer"></i> 
                                    </a>
                                </span>
                            <% } %> 
                            <% if(author.profile.links.facebook) { %> 
                                <span>
                                    <a href="<%= author.profile.links.facebook %> " target="_blank">
                                        <i class="fab fa-facebook-square"></i> 
                                    </a>
                                </span>
                            <% } %>
                            <% if(author.profile.links.twitter) { %> 
                                <span>
                                    <a href="<%= author.profile.links.twitter %> " target="_blank">
                                        <i class="fab fa-twitter-square"></i>
                                    </a>
                                </span>
                            <% } %>
                            <% if(author.profile.links.github) { %> 
                                <span>
                                    <a href="<%= author.profile.links.github %> " target="_blank">
                                        <i class="fab fa-github-square"></i>
                                    </a>
                                </span>
                            <% } %>
                        </div>
                    </div>

                    <div class="row">
                        <% if (author.profile.posts.length == 0) { %> 
                            <p class="text-center text-muted">User has not created any post yet.</p>
                        <% } else { %> 
                            <% for (let post of author.profile.posts.reverse()) { %> 
                                <div class="card col-sm-5 m-2">
                                    <% if(post.thumbnail) { %> 
                                        <img src="<%= post.thumbnail %>" class="card-img-top mt-3" alt="<%= post.title %> ">
                                    <% } %> 
                                    <div class="card-body p-0">
                                        <a href="/explorers/<%= post._id %>" style="color: #222;">
                                            <h5><%= post.title %></h5>
                                            <p class="mb-4"><%= truncate(post.body) %></p>
                                        </a>
                                    </div>
                                    <div class="d-flex">
                                        <small mt-2>
                                            <%= moment(post.createdAt) %>,   
                                            <%= post.readTime %> 
                                        </small>
                                    </div>
                                </div>    
                            <% } %> 
                        <% } %>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

<%- include('../../partials/footer.ejs') %> 

<script src="/scripts/bookmarks.js"></script>
    
</body>
</html>